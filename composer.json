{
    "name": "baja-foundry/flysystem-filecabinet",
    "description": "NetSuite FileCabinet adapter for Flysystem with Laravel support",
    "version": "1.0.0-beta.1",
    "keywords": ["netsuite", "filecabinet", "flysystem", "laravel", "filesystem"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Baja Foundry",
            "email": "info@baja-foundry.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "league/flysystem": "^3.30",
        "guzzlehttp/guzzle": "^7.9",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "league/flysystem-adapter-test-utilities": "^3.29",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0",
        "phpstan/phpstan": "^1.12",
        "squizlabs/php_codesniffer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "BajaFoundry\\NetSuite\\Flysystem\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BajaFoundry\\NetSuite\\Flysystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level 8",
        "phpcs": "phpcs src tests --standard=PSR12",
        "phpcbf": "phpcbf src tests --standard=PSR12"
    },
    "extra": {
        "laravel": {
            "providers": [
                "BajaFoundry\\NetSuite\\Flysystem\\Laravel\\NetSuiteFileCabinetServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}